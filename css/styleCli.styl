a{
    text-decoration none
}
body
    background url('../Resources/fondo.jpg') no-repeat center center fixed
    background-size 100.5% 100.5%
    header          
        .titulo
            p
                font-family font, regular
                color white
                display inline-block
            .menu
                display none
                color white
        nav
            background rgba(0,0,0, 0.4)
            div
                p
                    font-family font, regular
                h3
                    font-family fuente
            .cabecera
                margin 0 auto
                .logo
                    float left
                .fabrica
                    color white
                    margin 0px
                .de, .medios, .soluciones
                    margin auto
                    color white
            .clientes
                background white
                h3, p
                    color azul
            .servicios, .trabajo, .impresos
                background fondo
                h3, p
                    color white
            .contactenos
                margin 0 5%
                p
                    color white
                    font-family font
                    display inline-block
    section
        position: relative
        .msd, .quideca, .biopass, .lafrancol, .cliente, .aldeas
            background rgba(242,242,242, 0.25)
            border-radius 10px
    footer
        bottom 0px
        width 100%      
        .info
            p
                color gray
                font-family fontInfo
                width 100%
                text-align center
